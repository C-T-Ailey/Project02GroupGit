<h2> Edit Book Details </h2>
<link href="../css/book-edit.css" rel="stylesheet"/>
<form method="POST" action="/book/update?_method=PUT">
<div id="banner">
    <center><div id="container">
    <div>
        <h4 id="name">Title</h4>
        <input type="text" name="title" value="<%= book.title %>"/>
    </div>

    <div>
        <h4 id="password">Author(s)</h4>
        <select type="text" name="authors" multiple="multiple">
            <%  book.authors.forEach(function(author){ %>
                <option value="<%= author._id %>"><%= author.name %></option>
            <% }) %>
        </select>
    </div>

    <div>
        <h4>Year Published</h4>
        <input type="number" name="yearPublished" value="<%= book.yearPublished %>"/>
    </div>

    <div>
        <h4>Cover Image URL</h4>
        <input type="url" name="imageUrl" value="<%= book.imageUrl %>">
    </div>

    <input type="hidden" name="createdBy" value="<%= currentUser.id %>">

    <input type="hidden" name="id" value="<%= book._id %>">

    <button type="submit">Update Book</button>

</form>