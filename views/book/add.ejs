<h1>Add to the Bookshelf</h1>

<form method="POST" action="/book/add">

    <div>
        <label>Title</label>
        <input type="text" name="title">
    </div>

    <div>
        <label>Author(s)</label>
        <select type="text" name="authors[]" multiple="multiple">
            <%  authors.forEach(function(author){ %>
                <option value="<%= author._id %>"><%= author.name %></option>
            <% }) %>
        </select>
    </div>

    <div>
        <label>Year Published</label>
        <input type="number" name="yearPublished">
    </div>

    <div>
        <label>Book Cover URL</label>
        <input type="url" name="imageUrl">
    </div>

    <div>
        <label>Review Title</label>
        <input type="text" name="reviewTitle">
    </div>

    <div>
        <label>Review</label>
        <textarea name="reviewBody"></textarea>
    </div>

    <button type="submit">Add to Bookshelf!</button>

</form>