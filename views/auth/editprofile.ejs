<link href="../css/signup.css" rel="stylesheet"/>
<form method="POST" action="/auth/updateprofile?_method=PUT">
    <div id="banner">
        <center>
            <h2 style="color:white"> Edit Profile </h2>
            <div id="container">
                <div>
                    <h4>First Name</h4>
                    <input type="text" name="firstName" value="<%= currentUser.firstName %>"/>
                </div>
                <div>
                    <h4>Last Name</h4>
                    <input type="text" name="lastName" value="<%= currentUser.lastName %>"/>
                </div>
                <div>
                    <h4>Email Address:</h4>
                    <input type="email" name="emailAddress" value="<%= currentUser.emailAddress %>"/>
                </div>

                <input type="hidden" name="id" value="<%= currentUser._id %>">

                <div>
                    <button type="submit">Update Profile</button>
                </div>
            </div>
        </center>
    </div>
</form>