<h1>Authors</h1>

<table class="table-bordered border-primary">
    <tr>
        <th>Name</th>
        <th>Nationality</th>
        <th>Year of Birth</th>
        <th>Publications</th>
        <th>Books</th>
        <th>Entry Added</th>
        <th>Entry Created</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

<% authors.forEach(function(author){ %>

    <tr>
        <td>
            <a href="/author/detail?id=<%= author.id %>"><%= author.name %></a>
        </td>
        <td><%= author.nationality %></td>
        <td><%= author.birthYear %></td>
        <td><%= author.book.length %></td>
        <td>
            <% author.book.forEach(function(book){ %>
            <li> 
                <%= book.title %>
            </li>
            <% }) %>
        </td>
        <td><%= moment(author.createdAt).fromNow() %></td>
        <td><%= moment(author.updatedAt).fromNow() %></td>
        
        <td><a href="/author/edit?id=<%= author.id %>">Edit</a></td>
        <td><a href="/author/delete?id=<%= author.id %>">Delete</a></td>
        
    </tr>
<% }) %>
</table>